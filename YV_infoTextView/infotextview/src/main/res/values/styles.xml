<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/title_bg</item>
        <item name="android:listDivider">@drawable/list_item_divider</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="RippleStyle">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="InfoTextValueStyle" parent="InfoTextStyle">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="InfoTextLayoutStyle" parent="RippleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_view_height</item>
        <item name="android:layout_marginLeft">@dimen/size_10</item>
        <item name="android:layout_marginRight">@dimen/size_10</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 水平分割线 -->
    <style name="HorDividerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/list_divider_color</item>
    </style>
</resources>